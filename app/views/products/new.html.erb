<div class="container mt-5">
    <h2>Add a Product</h2>
    <%= form_with(model: @product) do |f| %>
        <%= f.label :Name %>
        <%= f.text_field :product_name, class: "form-control" %>

        <%= f.label :Price %>
        <%= f.text_field :price, class: "form-control" %>

        <%= f.submit "Create Product", class: "mt-3 btn btn-primary" %>
    <% end %>
</div>
